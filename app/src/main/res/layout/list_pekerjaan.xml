<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:id="@+id/cv_list_event"
        android:layout_gravity="center"
        android:layout_width="344dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="16dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tanggal"
                    android:textSize="10dp"
                    android:text="29-11-2018"/>
                <TextView
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_list_event_title"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Nama Pekerjaan"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="2dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/time"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_access_time_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="6dp"
                        android:layout_toRightOf="@+id/time"
                        android:layout_height="wrap_content"
                        android:id="@+id/type"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:text="partTime"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_below="@+id/time"
                        android:id="@+id/tingkat"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_school_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="6dp"
                        android:layout_toRightOf="@+id/tingkat"
                        android:layout_below="@+id/type"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:id="@+id/pendidikan"
                        android:textSize="12dp"
                        android:text="SMA"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_below="@+id/tingkat"
                        android:id="@+id/location"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_location_on_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="6dp"
                        android:layout_toRightOf="@id/location"
                        android:layout_below="@+id/pendidikan"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:id="@+id/lokasi"
                        android:textSize="12dp"
                        android:text="Yogyakarta"/>
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_list_event_cover"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_broken_image_black_24dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!--dd-->
</FrameLayout>